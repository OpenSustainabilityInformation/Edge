<?xml version="1.0" encoding="UTF-8" ?>
<form action="info/create/lca/modelingandvalidation" name="lca">
  <fieldset name="Modeling and Validation" linked_type="lca:modelingandValidation">
    <intended_application rules="trim|xss_clean">
	  <label>Intended Application</label>
      <type>text</type>
	  <linked_type>lca:intendedApplication</linked_type>
    </intended_application>
    <information_sources rules="trim|xss_clean">
	  <label>Information Sources</label>
      <type>text</type>
	  <linked_type>lca:informationSources</linked_type>
	  <multiple>yes</multiple>
    </information_sources>
	<fieldset name="Modeling Principles" linked_type="lca:modelingPrinciples">
    	<data_selection_principles rules="trim|xss_clean">
	  		<label>Data Selection Principles</label>
      		<type>text</type>
			<linked_type>lca:dataSelectionPrinciples</linked_type>
    	</data_selection_principles>   
    	<adaptation_principles rules="trim|xss_clean">
	  		<label>Adaptation Principles</label>
      		<type>text</type>
			<linked_type>lca:adaptationPrinciples</linked_type>
    	</adaptation_principles>
		<fieldset name="Modeling Constants" linked_type="lca:modelingConstants" multiple="yes">
			<modeling_constant_name>
		  		<label>Name</label>
	      		<type>text</type>
				<linked_type>lca:modelingConstantName</linked_type>
			</modeling_constant_name>
			<modeling_constant_value>
		  		<label>Value</label>
	      		<type>text</type>
				<linked_type>lca:modelingConstantValue</linked_type>
			</modeling_constant_value>
		</fieldset>
 	</fieldset>
	<fieldset name="Modeling Choices" linked_type="lca:modelingChoices">
		<excluding_elementary_flows>
	  		<label>Criteria for Excluding Elementary Flows</label>
      		<type>text</type>
			<linked_type>lca:criteriaforExcludingElementaryFlows</linked_type>
		</excluding_elementary_flows>		
		<excluding_intermediate_product_flows>
	  		<label>Value</label>
      		<type>text</type>
			<linked_type>lca:criteriaForExcludingIntermediateProductFlows</linked_type>
		</excluding_intermediate_product_flows>
		<fieldset name="Allocations Performed" linked_type="lca:allocationsPerformed">
			<allocated_coproducts>
		  		<label>Allocated Co-Products</label>
	      		<type>text</type>
				<linked_type>lca:allocatedCoProducts</linked_type>
			</allocated_coproducts>		
			<allocation_explanation>
		  		<label>Allocation Explanantion</label>
	      		<type>text</type>
				<linked_type>lca:allocationExplanation</linked_type>
			</allocation_explanation>				
		</fieldset>
 	</fieldset>		
    <modeling_choices rules="trim|xss_clean">
	  <label>Modeling Choices</label>
      <type>text</type>
    </modeling_choices>
    <data_quality_statement rules="trim|xss_clean">
	  <label>Data Quality Statement</label>
      <type>text</type>
    </data_quality_statement>
  </fieldset>
    <submit>
        <type>submit</type>
        <value>Submit</value>
    </submit>

</form>

