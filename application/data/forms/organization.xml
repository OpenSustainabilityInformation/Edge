<form action="/lca/createpart/organization" name="Organization Description">
	<orgType>
		<label>Organization Name</label>
		<type>hidden</type>
	  	<linked_type>foaf:Organization</linked_type>
		<optional>no</optional>
		<multiple>no</multiple>
	</orgType>			
	<name rules="trim">
		<label>Organization Name</label>
		<type>text</type>
	  	<linked_type>skos:prefLabel</linked_type>
		<optional>no</optional>
		<multiple>no</multiple>
	</name>
	<site rules="trim">
		<label>Website</label>
		<type>text</type>
	  	<linked_type>org:hasSite</linked_type>
		<optional>yes</optional>
		<multiple>yes</multiple>
	</site>
	<classification rules="trim">
		<label>Classification</label>
		<type>hidden</type>
	  	<linked_type>org:classification</linked_type>
		<optional>no</optional>
		<multiple>no</multiple>
	</classification>
</form>