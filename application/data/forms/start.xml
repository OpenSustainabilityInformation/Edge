<form action="/lca/create" name="Create LCA">
    <blank rules="">
        <type>hidden</type>
        <value>true</value>
    </blank>  
  <fieldset name="Description">
        <name rules="trim|required">
            <label>Name</label>
            <type>text</type>
            <linked_type>rdfs:label</linked_type>
        </name>   
        <description rules="trim">
            <label>Description</label>
            <type>textarea</type>
            <linked_type>rdfs:description</linked_type>
        </description>            
        <productServiceName rules="trim|required">
            <label>Product/Service</label>
            <type>text</type>
        </productServiceName>
        <qrQuantity rules="trim|required">
            <label>Quantity</label>
            <type>text</type>
        </qrQuantity>     
        <qrUnit rules="trim|required">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </qrUnit>         
    </fieldset>
    <fieldset name="Publication"> 
        
	        <title rules="trim">
	            <label>Title</label>
	            <type>text</type>
	        </title>
	        <link rules="trim">
	            <label>Publication Link</label>
	            <type>text</type>
	        </link>
	        <year rules="trim">
	            <label>Publication Year</label>
	            <type>text</type>
	        </year>
		<author rules="trim">
         <label>Author</label>
            <type>popup</type>
            <popup>people</popup>
        </author>
        <email rules="trim">
            <label>Author's email</label>
            <type>text</type>
        </email>  

    </fieldset>
    <fieldset name="Flow" multiple="yes"> 
        <io rules="trim">
            <label>Direction</label>
            <type>radio</type>
            <options>
                <eco_Input>Input</eco_Input>
                <eco_Output>Output</eco_Output>
            </options>
        </io>
        <exchangeType rules="trim">
            <label>Flow</label>
            <type>radio</type>
            <options>
                <eco_Exchange>Exchange between the process and the environment</eco_Exchange>
                <eco_Transfer>Exchange between processes</eco_Transfer>
            </options>
        </exchangeType>
        <substanceName rules="trim">
            <label>Substance Name</label>
            <type>text</type>
        </substanceName>
        <ioQuantity rules="trim">
            <label>Quantity</label>
            <type>text</type>
        </ioQuantity>     
        <ioUnit rules="trim">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </ioUnit>     
    </fieldset>
    <fieldset name="Impact Assessment" multiple="yes">    
        <impactCategory rules="trim">
            <label>Impact Category</label>
            <type>popup</type>
            <popup>impacts</popup>
        </impactCategory>
        <impactCategoryIndicator rules="trim">
            <label>Impact Indicator</label>
            <type>popup</type>
            <popup>impacts</popup>
        </impactCategoryIndicator>
        <assessmentQuantity rules="trim">
            <label>Quantity</label>
            <type>text</type>
        </assessmentQuantity>     
        <assessmentUnit rules="trim">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </assessmentUnit>     
    </fieldset>
    <fieldset name="Submit">  
        <submit rules="">
            <type>submit</type>
            <value>Submit</value>
            <linked_type>null</linked_type>
        </submit>
    </fieldset>
</form>