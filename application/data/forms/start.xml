<form action="/lca/create" name="start">
    <blank rules="">
        <type>hidden</type>
        <value>true</value>
    </blank>  
  <fieldset name="Process/Product/Service">
        <name rules="trim">
            <label>Name</label>
            <type>text</type>
            <linked_type>rdfs:label</linked_type>
        </name>   
        <description rules="trim">
            <label>Description</label>
            <type>textarea</type>
            <linked_type>rdfs:description</linked_type>
        </description>            
        <productServiceName rules="trim">
            <label>Product/Service</label>
            <type>text</type>
        </productServiceName>
        <ioQuantity rules="trim">
            <label>Quantity</label>
            <type>text</type>
        </ioQuantity>     
        <ioUnit rules="trim">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </ioUnit>         
    </fieldset>
    <fieldset name="Publication"> 
        <author rules="trim">
            <label>Author</label>
            <type>popup</type>
            <popup>people</popup>
        </author>
        <title rules="trim">
            <label>Title</label>
            <type>text</type>
        </title>
        <email rules="trim">
            <label>Email</label>
            <type>text</type>
        </email>  
        <link rules="trim">
            <label>Publication Link</label>
            <type>text</type>
        </link>       
    </fieldset>
    <fieldset name="Flow" multiple="yes"> 
        <io rules="trim">
            <label>Input/Output</label>
            <type>radio</type>
            <options>
                <Input>Input</Input>
                <Output>Output</Output>
            </options>
        </io>
        <exchangeType rules="trim">
            <label>Transfer/Flow</label>
            <type>radio</type>
            <options>
                <exchange>Exchange between the process and the environment</exchange>
                <transfer>Exchange between processes</transfer>
            </options>
        </exchangeType>
        <substanceName rules="trim">
            <label>Substance Name</label>
            <type>text</type>
        </substanceName>
        <ioQuantity rules="trim">
            <label>Quantity</label>
            <type>text</type>
        </ioQuantity>     
        <ioUnit rules="trim">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </ioUnit>     
    </fieldset>
    <fieldset name="Impact Assessment" multiple="yes">    
        <impactCategory rules="trim">
            <label>Impact Category</label>
            <type>popup</type>
            <popup>impacts</popup>
        </impactCategory>
        <impactCategoryIndicator rules="trim">
            <label>Impact Indicator</label>
            <type>popup</type>
            <popup>impacts</popup>
        </impactCategoryIndicator>
        <assessmentQuantity rules="trim">
            <label>Quantity</label>
            <type>text</type>
        </assessmentQuantity>     
        <assessmentUnit rules="trim">
            <label>Unit</label>
            <type>popup</type>
            <popup>unit</popup>
        </assessmentUnit>     
    </fieldset>
    <fieldset name="Submit">  
        <submit rules="">
            <type>submit</type>
            <value>Submit</value>
            <linked_type>null</linked_type>
        </submit>
    </fieldset>
</form>