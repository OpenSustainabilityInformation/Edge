/*

  This is a configuration file for generating documentation from the Sourcemap
  javascript library.
	
	In order to generate the documenation, run JsDoc Toolkit from the sourcemap
	folder like so:
	
  java -jar server/jsdoc-toolkit/jsrun.jar server/jsdoc-toolkit/app/run.js \
    -c=assets/scripts/sourcemap.conf

*/

{
	// source files to use
	_: [ "assets/scripts/main.js",
	     "assets/scripts/admin.js",
       "assets/scripts/auth.js",
       "assets/scripts/carbonto.js",
       "assets/scripts/chooser.js",
       "assets/scripts/openlayers_map.js" ],
	
	// document all functions, even uncommented ones
	a: true,
	
	// including those marked @private
	//p: true,
	
	// some extra variables I want to include
	//D: {generatedBy: "Michael Mathews", copyright: "2008"},
	
	// use this directory as the output directory
	d: "docs/jsdocs",
	
	// use this template
	t: "server/jsdoc-toolkit/templates/jsdoc",
	
	// set verbose output
	v: true
}
